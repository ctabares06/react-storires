{
  "root": true,
  "plugins": [
    "testing-library",
    "jest-dom"
  ],
  "extends": [
    "plugin:testing-library/react",
    "plugin:jest-dom/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"],
        "paths": ["src"]
      }
    }
  },
  "rules": {
    "quotes": ["warn", "single", { "allowTemplateLiterals": true, "avoidEscape": true }],
    "jsx-quotes": ["error", "prefer-double"]
  }
}